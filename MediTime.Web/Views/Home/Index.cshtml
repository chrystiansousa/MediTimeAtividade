@model IEnumerable<MediTime.Application.ViewModels.MedicamentoViewModel>

@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao MediTime</h1>
    <p>Seus medicamentos cadastrados:</p>
</div>

<hr />

<p>
    <a asp-controller="Medicamentos" asp-action="Create" class="btn btn-primary">Adicionar Novo Medicamento</a>
    <a asp-controller="Medicamentos" asp-action="Index" class="btn btn-secondary">Gerenciar Medicamentos (Editar/Excluir)</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Dosagem)</th>
            <th>@Html.DisplayNameFor(model => model.Forma)</th>
            <th>Ações</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Dosagem)</td>
                <td>@Html.DisplayFor(modelItem => item.Forma)</td>
                <td>
                    <a asp-controller="Medicamentos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-controller="Medicamentos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>